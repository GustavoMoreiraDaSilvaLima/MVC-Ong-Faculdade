<div class="container mt-5" style="padding: 2%;">
    <div class="row">
        <div class="col-12 text-center">
            <p class="lead">Confira nossos próximos eventos</p>
        </div>
    </div>
    <div>
        <% if(lista != undefined && lista.length > 0) { %>
        <div class="row mt-4">
            <% lista.forEach(function(evento) { %>
            <div class="col-md-4 d-flex align-items-stretch">
                <div class="card mb-4">
                    <img src="<%= evento.evento_imagem %>" class="card-img-top" width="100%" height="70%" alt="Evento <%= evento.evento_id %>">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= evento.evento_nome %></h5>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal<%= evento.evento_id %>">
                            Mais Informacoes
                          </button>
                    </div>
                </div>
            </div>



            <div class="modal fade" id="exampleModal<%= evento.evento_id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title fs-5" id="exampleModalLabel"><%= evento.evento_nome %></h1>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <%= evento.evento_descricao %> <br>
                        <hr>
                        <p class="card-text text-center">
                            <bold class="text-muted">Data: <%= new Date(evento.evento_data).toLocaleDateString() %><br> 
                            Inicio: <%=evento.evento_inicio %> 
                            Duração: <%= evento.evento_duracao %> Horas</bold>
                        </p>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                      <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                  </div>
                </div>
              </div>



            <% }); %>
        </div>
        <% } else { %>
        <h1><strong>Nenhum Evento encontrado</strong></h1>
        <% } %>
    </div>
</div>