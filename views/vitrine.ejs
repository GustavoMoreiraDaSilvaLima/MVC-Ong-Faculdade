<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Shop Homepage - Start Bootstrap Template</title>
        <!-- Favicon-->
        <!-- Bootstrap icons-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet"/>
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="/css/Vitrine/css/styles.css" rel="stylesheet"/>
        <link href="/css/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/css/Vitrine/adminlte.min.css">
        
    </head>
    <body>
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand" href="#!">Lojinha Fullstack</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    </ul>
                    <form class="d-flex">
                        <button data-bs-toggle="modal" data-bs-target="#modalCarrinho" class="btn btn-outline-dark" type="button">
                            <i class="bi-cart-fill me-1"></i>
                            Carrinho
                            <span id="contadorCarrinho" class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                        </button>
                        <div style="margin-left: 10px;">
                            <a class="btn btn-outline-dark" href="/home"> <i class="bi bi-person-fill"></i> Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </nav>
        <!-- Header-->
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Compre os nossos produtos</h1>
                    <p class="lead fw-normal text-white-50 mb-0">Torne-se um verdadeiro desenvolvedor fullstack com eles!</p>
                </div>
            </div>
        </header>
        <!-- Section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

                    <% produtos.map(function(value, index) { %>
                        <div class="col mb-5">
                            <div class="card h-100">
                                <!-- Product image-->
                                <img class="card-img-top" src="<%= value.imagem %>" alt="Imagem do produto" />
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <div class="d-flex justify-content-center small mb-2">
                                            <%= value.marcaNome %>
                                        </div>
                                        <h5 class="fw-bolder"><%= value.produtoNome %></h5>
                                        <div class="d-flex justify-content-center small mb-2">
                                            <%= value.categoriaNome %>
                                        </div>
                                        <!-- Product price-->
                                        R$<%= value.produtoValor %> 
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center">
                                        <button data-produtoid="<%= value.produtoId %>" class="btn btn-outline-dark mt-auto btnAddCarrinho"><i     class="bi-cart-fill me-1"></i> Adicionar ao carrinho</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
<div class="modal fade modal-xl" id="modalCarrinho" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi-cart-fill me-1"></i> Carrinho</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="jota">
                <table class="table table-bordered table-striped" id="tabelaCarrinho">
                    <thead>
                        <tr>
                            <th>CÃ³digo</th>
                            <th>Imagem</th>
                            <th>Nome</th>
                            <th>Valor</th>
                            <th>Qtd.</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col text-end">
                        <h3 id="antecessor">Total:</h3>
                    </div>
                    <div class="col p-0">
                        <h3 id="valorTotalCarrinho" class="fw-bolder"></h3>
                    </div>
                </div>
            </div>
            <hr>
            <div class="modal-dialog">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-success">Confirmar pedido</button>
            </div>
        </div>
    </div>
</div>

        </section>
        <!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Lojinha Fullstack 2023</p></div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="/js/Vitrine/js/scripts.js"></script>
        <script src="/js/Vitrine/carrinho.js"></script>
    </body>
</html>
