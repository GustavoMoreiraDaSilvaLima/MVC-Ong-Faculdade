<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Shop Homepage - Start Bootstrap Template</title>
        <!-- Favicon-->
        <!-- Bootstrap icons-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet"/>
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="/css/Vitrine/css/styles.css" rel="stylesheet"/>
        <link href="/css/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/css/Vitrine/adminlte.min.css">
    <link rel="stylesheet" href="/css/Vitrine/zoomImagem.css">

        
    </head>
    <body>
        <header class="fixed-top">
            <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">
              <div class="container">
                <a class="navbar-brand" href="/"><img src="/img/logo3.png" width="40px" alt=""></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarCollapse">
                  <ul class="navbar-nav"> 
                    <li class="nav-item">
                      <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li> 
                    <li class="nav-item">
                      <a class="nav-link" id="voluntario" href="/produtos">Produtos</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/noticias">Notícias</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/QuemSomos">Quem Somos?</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/doacao">Doar</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" id="voluntario" href="/seja_um_voluntario">Seja Voluntário</a>
                    </li>
                  </ul>
                </div>

                <button data-bs-toggle="modal" data-bs-target="#modalCarrinho" class="btn btn-outline-light" type="button">
                    <i class="bi-cart-fill me-1"></i>
                    Carrinho
                    <span id="contadorCarrinho" class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                </button>
                <a href="/admin"><button class="btn btn-success ml-1" onclick="Sair()" id="LOGADO">LOGIN</button></a>
              </div>
            </nav>
          </header>

        <!-- Section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5 py-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

                    <% produtos.map(function(value, index) { %>
                        <div class="col mb-5" id="Zoom" >
                            <div class="card h-100">
                                <!-- Product image-->
                                <img class="card-img-top" src="<%= value.imagem %>" alt="Imagem do produto" />
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <div class="d-flex justify-content-center small mb-2">
                                            <%= value.marcaNome %>
                                        </div>
                                        <h5 class="fw-bolder"><%= value.produtoNome %></h5>
                                        <div class="d-flex justify-content-center small mb-2">
                                            <%= value.categoriaNome %>
                                        </div>
                                        <!-- Product price-->
                                        R$<%= value.produtoValor %> 
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center">
                                        <button data-produtoid="<%= value.produtoId %>" class="btn btn-outline-dark mt-auto btnAddCarrinho"><i     class="bi-cart-fill me-1"></i> Adicionar ao carrinho</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
            <div class="modal fade" id="modalCarrinho" tabindex="-1" aria-labelledby="modalCarrinhoLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalCarrinhoLabel"><i class="bi-cart-fill me-1"></i> Carrinho</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="jota">
                        <table class="table table-bordered table-striped" id="tabelaCarrinho">
                        <thead>
                            <tr>
                            <th>Código</th>
                            <th>Imagem</th>
                            <th>Nome</th>
                            <th>Valor</th>
                            <th>Qtd.</th>
                            <th>Total</th>
                            <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Dados da tabela -->
                        </tbody>
                        </table>
                    </div>
                    <div class="container">
                        <div class="row">
                        <div class="col text-end">
                            <h3 id="antecessor">Total:</h3>
                        </div>
                        <div class="col p-0">
                            <h3 id="valorTotalCarrinho" class="fw-bolder"></h3>
                        </div>
                        </div>
                    </div>
                    <hr>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Fechar</button>
                        <button type="button" class="btn btn-success">Confirmar pedido</button>
                    </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Footer-->
        <!-- Bootstrap core JS-->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
        <!-- Core theme JS-->
        <script src="/js/Vitrine/js/scripts.js"></script>
        <script src="/js/carrinho.js"></script>
    </body>
</html>
