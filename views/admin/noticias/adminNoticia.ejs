<div class="container">
    <h1 class="">Últimas Notícias</h1>
    <style>
        .editar {
            margin-right: 1.5rem;
        }

        .custom-link {
            color: inherit; /* Usa a cor padrão do texto */
            text-decoration: none; /* Remove o sublinhado */
            cursor: pointer; /* Muda o cursor para parecer mais um botão */
        }

        .custom-link:hover {
            color: inherit; /* Mantém a cor quando o mouse passa por cima */
        }

        .list-group-item {
            cursor: pointer; /* Indica que é clicável */
        }

        .list-group-item a,
        .list-group-item button {
            margin-left: 0.5rem;
        }
    </style>
    <script src="/js/admin/noticias/excluir.js"></script>

    <div class="list-group">
        <% for (let i = 0; i < lista.length; i++)  { %>
        <div class="list-group-item list-group-item-action flex-column align-items-start mb-1 border-1 border-black p-2 bd-highlight" onclick="window.location.href='/espec/<%= lista[i].ONG_NOTICIA_ID %>'">
            <div>
                <div class="row">
                    <div class="col-md-1 my-auto">
                        <img src="<%= lista[i].ONG_NOTICIA_IMG %>" alt="Ícone Notícia" class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1"><%= lista[i].ONG_NOTICIA_TITULO %></h5>
                        </div>
                        <p class="mb-1"><%= lista[i].ONG_NOTICIA_DESCRICAO%></p>
                    </div>
                </div>
            </div>
            <div class="col-lg-12" style="text-align: right;">
                <a id="editar" href="noticias/adminEditar/<%= lista[i].ONG_NOTICIA_ID %>" class="btn btn-primary" onclick="event.stopPropagation();"><i class="fas fa-pen"></i></a>
                <button data-codigo="<%= lista[i].ONG_NOTICIA_ID %>" id="btnExcluir" class="btn btn-danger btnExcluir" onclick="event.stopPropagation();"><i class="fas fa-trash"></i></button>
            </div>
        </div>
        <% } %>
        <a href="/admin/noticias/adminCadastrar" type="submit" class="btn btn-success">Criar Noticia</a>
    </div>
    <br><br><br><br><br>
</div>
