<script src="/js/admin/produto/alterar.js"></script>
<div class="container mt-5">
  <div class="row justify-content-center">
      <div class="col-md-8 mt-5">
          <div class="card">
              <div class="card-header">
                  <h1 class="h3 mb-0">Alterar produto</h1>
              </div>
              <div class="card-body">
                  <form>
                      <input type="hidden" id="inputId" value="<%= produtoAlter.produtoId %>">
                      <div class="form-group">
                          <label for="inputCodigo">CÃ³digo</label>
                          <input type="text" value="<%= produtoAlter.produtoCodigo %>" class="form-control" id="inputCodigo">
                      </div>
                      <div class="form-group">
                          <label for="inputNome">Nome</label>
                          <input type="text" value="<%= produtoAlter.produtoNome %>" class="form-control" id="inputNome">
                      </div>
                      <div class="form-group">
                          <label for="inputQtde">Quantidade</label>
                          <input type="number" value="<%= produtoAlter.produtoQuantidade %>" class="form-control" id="inputQtde">
                      </div>
                      <div class="form-group">
                          <label for="inputValor">Valor</label>
                          <input type="text" value="<%= produtoAlter.produtoValor %>" class="form-control" id="inputValor">
                      </div>
                      <div class="form-group">
                          <label for="selMarca">Marca</label>
                          <select class="form-control" id="selMarca">
                              <option value="0">--Selecione--</option>
                              <% for(let i = 0; i<listaMarcas.length; i++) { %>
                                  <% if (listaMarcas[i].marcaId == produtoAlter.marcaId) { %>
                                      <option selected value="<%=listaMarcas[i].marcaId%>"><%= listaMarcas[i].marcaNome %></option>
                                  <%} else { %>
                                      <option value="<%=listaMarcas[i].marcaId%>"><%= listaMarcas[i].marcaNome %></option>
                                  <%} %>                
                              <% } %>                 
                          </select>
                      </div>
                      <div class="form-group">
                          <label for="selCategoria">Categoria</label>
                          <select class="form-control" id="selCategoria">
                              <option value="0">--Selecione--</option>
                              <% for(let i = 0; i<listaCategorias.length; i++) { %>
                                  <% if (listaCategorias[i].categoriaId == produtoAlter.categoriaId) { %>
                                      <option selected value="<%=listaCategorias[i].categoriaId%>"><%= listaCategorias[i].categoriaNome %></option>
                                  <%} else { %>
                                      <option value="<%=listaCategorias[i].categoriaId%>"><%= listaCategorias[i].categoriaNome %></option>
                                  <%} %>                
                              <% } %>    
                          </select>
                      </div>
                      <div class="form-group mt-1">
                          <label for="inputImagem">Imagem do produto</label>
                          <input type="file" class="form-control" id="inputImagem">
                      </div>
                      <div class="form-group mt-1">
                          <img id="previaImagem" width="200" src="<%= produtoAlter.imagem %>">
                      </div>
                      <div class="form-group mt-4">
                          <button class="btn btn-primary" type="button" id="btnAlterar">Alterar</button>
                          <a href="/produto" class="btn btn-secondary">Voltar</a>
                      </div>
                  </form>
              </div>
          </div>
      </div>
  </div>
</div>
